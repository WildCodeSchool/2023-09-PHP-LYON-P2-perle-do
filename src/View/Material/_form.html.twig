{# TODO : manage errors display #}
<h3 id="title-add-category">
	Ajouter/modifier un matériaux
</h3>
<form method="post">
	{% for error in errors %}
		<p class="errors-category">
			{{error}}
		</p>
	{% endfor %}

	<div class="add-category-grid" id="add-category-form">
		<input type="hidden" value="{{ material.id }}" name="id">
		<label for="name">Nom</label>
		<input type="text" value="{{ material.name }}" name="name" id="name">
		<button data-target="modal-delete"
            onClick="toggleModal(event)">Enregistrer</button>
	</form>

	<dialog id="modal-delete">
		<article class="modal">
			<a href="#close" aria-label="Close" class="close" data-target="modal-delete" onclick="toggleModal(event)"></a>
			<h3>Matériaux bien ajouté !</h3>
			<footer>
				<a href="#cancel" role="button" class="secondary" data-target="modal-delete" onclick="toggleModal(event)">
					OK
				</a>
			</footer>
		</article>
	</dialog>
