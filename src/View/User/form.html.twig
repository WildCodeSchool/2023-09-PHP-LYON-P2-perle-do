<div>
	<p>Édition d'un utilisateur</p>
	<article class="article_error">
		{% for error in errors %}
			<p class="auth_error">
				{{error}}
			</p>
		{% endfor %}
	</article>
	<form action="" method="post">
		<div class="mb-3">
			<input type="hidden" value="{{ user.id }}" name="id">
		</div>
		<div class="mb-3">
			<label for="pseudo" class="form-label">Nom d'utilisateur</label>
			<input class="form-control" type="pseudo" id="pseudo" value="{{ user.pseudo }}" name="pseudo" required>
		</div>
		<div class="mb-3">
			<label for="name" class="form-label">Prénom</label>
			<input class="form-control" type="text" id="name" value="{{ user.name }}" name="name" required>
		</div>
		<div class="mb-3">
			<label for="lastname" class="form-label">Nom</label>
			<input class="form-control" type="text" id="lastname" value="{{ user.lastname }}" name="lastname" required>
		</div>
		<div class="mb-3">
			<label for="role" class="form-label">Rôle</label>
			<input class="form-control" type="text" id="role" value="{{ user.role }}" name="role" required>
		</div>
		<div class="mb-3">
			<button type="submit" class="btn btn-success">Valider le formulaire</button>
		</div>
	</form>
</div>
